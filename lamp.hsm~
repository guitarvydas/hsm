machine lamp {

  default: off
  state off << intensity {
  }
  state on << intensity {
  }

    machine intensity {
      default: low
      state low << color {
	on intensity: { next medium }
      }
      state medium << color {
	on intensity: { next high }
      }
      state high << color {
	on intensity: { next low }
      }
    }


	machine color {
	  default: yellow
	  state yellow {
	    enter: ⟨// entry ⟩
	    on color: { next green }
	    exit: ⟨// exit ⟩
	  }
	  state green {
	    enter: ⟨// entry ⟩
	    on color: { next red }
	    exit: ⟨// exit ⟩
	  }
	  state red {
	    enter: ⟨// entry ⟩
	    on color: { next yellow }
	    exit: ⟨// exit ⟩
	  }
	}
}
